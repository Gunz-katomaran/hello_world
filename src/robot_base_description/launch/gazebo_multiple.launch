<?xml version="1.0"?>
<launch>

  <arg
  name="model" 
  default="$(find robot_base_description)/urdf/robot_base.xacro"
  />

 <arg name="paused"
		 default="false"/>

	<arg name="use_sim_time"
		 default="true"/>

	<arg name="gui"
		 default="true"/>

	<arg name="headless"
		 default="false"/>

	<arg name="debug"
		 default="false"/>

	<arg name="world"
		 default="$(find robot_base_gazebo)/worlds/rest1.world"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
  		<arg name="world_name" value="$(arg world)"/>
  		<arg name="debug" value="$(arg debug)" />
  		<arg name="gui" value="$(arg gui)" />
  		<arg name="paused" value="$(arg paused)"/>
  		<arg name="use_sim_time" value="$(arg use_sim_time)"/>
  		<arg name="headless" value="$(arg headless)"/>
  	</include>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)" />

  <node
    name="spawn_model1"
    pkg="gazebo_ros"
    type="spawn_model"
    args="-urdf -model robot_base1 -param robot_description -namespace one -x 0 -y -7 -z 0"
    output="screen" />

  <node
    name="spawn_model2"
    pkg="gazebo_ros"
    type="spawn_model"
    args="-urdf -model robot_base2 -param robot_description -namespace two -x -1 -y -7 -z 0"
    output="screen" />

  <node
    name="spawn_model3"
    pkg="gazebo_ros"
    type="spawn_model"
    args="-urdf -model robot_base3 -param robot_description -namespace three -x -2 -y -7 -z 0"
    output="screen" />

</launch>
